{
  "manifest_version": 3,
  "name": "LinkedIn Auto Scheduler",
  "version": "1.0.0",
  "description": "Automatically schedule LinkedIn posts from Content Composer AI",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://www.linkedin.com/*",
    "*://linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup-simple.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*", "*://linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
